{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "react-native"
  ],
  "globals": {
    "__DEV__": true,
    "Expo": true,
    "arguments": true
  },
  "rules": {
    "arrow-parens": 0,
    "global-require": 0,
    "import/prefer-default-export": 0,
    "no-console": 0,
    "linebreak-style": 0,
    "no-mixed-operators": 0,
    "no-use-before-define": 0,
    "class-methods-use-this": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "no-unused-vars": ["error", { "varsIgnorePattern": "Expo" }],
    "radix": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": 0,
    "semi": [2, "always"]
    // "comma-dangle": ["error", "never"]
  }
}
